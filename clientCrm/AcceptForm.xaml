<Window x:Class="clientCrm.AcceptForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:clientCrm"
        mc:Ignorable="d"
        Title="Подтверждение действий" Height="250" Width="350" Background="#26CDB1F6" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label x:Name="lbUserInfo" Content="Вы уверены?" Margin="0,29,31,105" Foreground="#FFECF4F5" Background="#00A3BFC5" FontSize="45" FontFamily="Segoe UI Light" HorizontalAlignment="Right" Width="275"/>
        <Button x:Name="btnYes" Content="Да" Margin="10,121,0,0" VerticalAlignment="Top" Click="btnYes_Click" Background="#26C0B8CD" Foreground="White" FontSize="25" FontFamily="Segoe UI Light" Height="55" HorizontalAlignment="Left" Width="143"/>
        <Button x:Name="btnNo" Content="Отмена" Margin="0,121,10,0" VerticalAlignment="Top" HorizontalAlignment="Right" Width="143" Background="#26C0B8CD" Foreground="White" FontSize="25" FontFamily="Segoe UI Light" Height="55" Click="btnNo_Click"/>

    </Grid>
</Window>
